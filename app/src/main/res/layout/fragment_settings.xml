<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background">

<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="16dp">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Settings"
        android:layout_marginBottom="32dp"
        style="@style/AppTitleStyle" />

    <!-- Themes Card -->
    
    <!-- Discord Integration Card -->
    <com.google.android.material.card.MaterialCardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="20dp"
        style="@style/ExpressiveCardStyle">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="24dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Discord Integration"
                android:layout_marginBottom="20dp"
                style="@style/ExpressiveSubheadStyle" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:layout_marginBottom="20dp">

                <TextView
                    android:id="@+id/discord_status_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Not connected"
                    android:textSize="14sp"
                    android:textStyle="bold"
                    android:textColor="#F44336" />

            </LinearLayout>

            <TextView
                android:id="@+id/discord_user_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=""
                android:textSize="14sp"
                android:textColor="@color/onSurfaceVariant"
                android:layout_marginBottom="20dp"
                android:visibility="gone" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/discord_login_button"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Login with Discord"
                android:textSize="16sp"
                android:textColor="@color/onPrimary"
                app:backgroundTint="#5865F2"
                app:icon="@drawable/ic_discord"
                app:iconTint="@color/onPrimary"
                style="@style/ExpressiveButtonStyle" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Connect your Discord account to enable Rich Presence and show your friends what you're playing!"
                android:textSize="12sp"
                android:textColor="@color/onSurfaceVariant"
                android:layout_marginTop="12dp" />

        </LinearLayout>

    </com.google.android.material.card.MaterialCardView>

    <com.google.android.material.card.MaterialCardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="20dp"
        style="@style/ExpressiveCardStyle">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="24dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Minecraft Configuration"
                android:layout_marginBottom="24dp"
                style="@style/ExpressiveSubheadStyle" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/textview3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/mc_pkgname"
                    android:textSize="16sp"
                    android:textColor="@color/onSurface"
                    android:layout_marginBottom="12dp" />

                <com.google.android.material.textfield.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Package name of Minecraft"
                    app:boxBackgroundColor="@color/surfaceVariant"
                    app:hintTextColor="@color/onSurfaceVariant"
                    app:boxStrokeColor="@color/outline"
                    style="@style/ExpressiveTextInputLayout">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/mc_pkgname"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="com.mojang.minecraftpe"
                        android:inputType="text"
                        android:textColor="@color/onSurface"
                        android:textSize="16sp" />

                </com.google.android.material.textfield.TextInputLayout>

            </LinearLayout>

        </LinearLayout>

    </com.google.android.material.card.MaterialCardView>

    <com.google.android.material.card.MaterialCardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="20dp"
        style="@style/ExpressiveCardStyle.Interactive">

        <LinearLayout
            android:id="@+id/themes_button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="24dp"
            android:gravity="center_vertical"
            android:background="?attr/selectableItemBackground"
            android:clickable="true"
            android:focusable="true">

            <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/ic_palette"
                android:layout_marginEnd="16dp"
                android:tint="@color/onSurface" />

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Themes"
                    style="@style/ExpressiveSubheadStyle" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Customize your launcher appearance"
                    android:textSize="14sp"
                    android:textColor="@color/onSurfaceVariant"
                    android:layout_marginTop="4dp" />

            </LinearLayout>

            <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/ic_chevron_right"
                android:layout_marginStart="8dp"
                android:tint="@color/onSurfaceVariant" />

        </LinearLayout>

    </com.google.android.material.card.MaterialCardView>

    <com.google.android.material.card.MaterialCardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="20dp"
        style="@style/ExpressiveCardStyle">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="24dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="About"
                android:textSize="20sp"
                android:textStyle="bold"
                android:textColor="@color/onSurface"
                android:layout_marginBottom="24dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/xeloversion"
                android:textSize="16sp"
                android:textColor="@color/onSurface"
                android:layout_marginBottom="12dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Minecraft Bedrock Edition Client"
                android:textSize="14sp"
                android:textColor="@color/onSurfaceVariant" />

        </LinearLayout>

    </com.google.android.material.card.MaterialCardView>

    <com.google.android.material.card.MaterialCardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="20dp"
        style="@style/ExpressiveCardStyle">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="24dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Recent Commits"
                android:textSize="20sp"
                android:textStyle="bold"
                android:textColor="@color/onSurface"
                android:layout_marginBottom="24dp" />

            <LinearLayout
                android:id="@+id/commits_container"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <!-- Commits will be dynamically added here -->
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Loading commits..."
                    android:textSize="14sp"
                    android:textColor="@color/onSurfaceVariant"
                    android:layout_gravity="center" />

            </LinearLayout>

        </LinearLayout>

    </com.google.android.material.card.MaterialCardView>

    <com.google.android.material.card.MaterialCardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="20dp"
        style="@style/ExpressiveCardStyle">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="24dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Device Information"
                android:textSize="20sp"
                android:textStyle="bold"
                android:textColor="@color/onSurface"
                android:layout_marginBottom="24dp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/device_model"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Model: Loading..."
                    android:textSize="14sp"
                    android:textColor="@color/onSurface"
                    android:layout_marginBottom="8dp" />

                <TextView
                    android:id="@+id/android_version"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Android Version: Loading..."
                    android:textSize="14sp"
                    android:textColor="@color/onSurface"
                    android:layout_marginBottom="8dp" />

                <TextView
                    android:id="@+id/build_number"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Build Number: Loading..."
                    android:textSize="14sp"
                    android:textColor="@color/onSurface"
                    android:layout_marginBottom="8dp" />

                <TextView
                    android:id="@+id/device_manufacturer"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Manufacturer: Loading..."
                    android:textSize="14sp"
                    android:textColor="@color/onSurface"
                    android:layout_marginBottom="8dp" />

                <TextView
                    android:id="@+id/device_architecture"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Architecture: Loading..."
                    android:textSize="14sp"
                    android:textColor="@color/onSurface"
                    android:layout_marginBottom="8dp" />

                <TextView
                    android:id="@+id/screen_resolution"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Screen Resolution: Loading..."
                    android:textSize="14sp"
                    android:textColor="@color/onSurface"
                    android:layout_marginBottom="8dp" />

                <TextView
                    android:id="@+id/total_memory"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Total Memory: Loading..."
                    android:textSize="14sp"
                    android:textColor="@color/onSurface" />

            </LinearLayout>

        </LinearLayout>

    </com.google.android.material.card.MaterialCardView>

    <!-- Community Links Card -->
    <com.google.android.material.card.MaterialCardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="20dp"
        style="@style/ExpressiveCardStyle">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="24dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Community"
                android:textSize="20sp"
                android:textStyle="bold"
                android:textColor="@color/onSurface"
                android:layout_marginBottom="24dp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center"
                android:weightSum="2">

                <!-- GitHub Button -->
                <LinearLayout
                    android:id="@+id/github_button"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:gravity="center"
                    android:padding="16dp"
                    android:layout_marginEnd="8dp"
                    android:background="?attr/selectableItemBackgroundBorderless"
                    android:clickable="true"
                    android:focusable="true">

                    <ImageView
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:src="@drawable/ic_github"
                        android:layout_marginBottom="8dp"
                        android:contentDescription="GitHub" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="GitHub"
                        android:textSize="12sp"
                        android:textColor="@color/onSurface"
                        android:gravity="center" />

                </LinearLayout>

                <!-- Discord Button -->
                <LinearLayout
                    android:id="@+id/discord_button"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:gravity="center"
                    android:padding="16dp"
                    android:layout_marginStart="8dp"
                    android:background="?attr/selectableItemBackgroundBorderless"
                    android:clickable="true"
                    android:focusable="true">

                    <ImageView
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:src="@drawable/ic_discord"
                        android:layout_marginBottom="8dp"
                        android:contentDescription="Discord" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Discord"
                        android:textSize="12sp"
                        android:textColor="@color/onSurface"
                        android:gravity="center" />

                </LinearLayout>

            </LinearLayout>

        </LinearLayout>

    </com.google.android.material.card.MaterialCardView>

</LinearLayout>

</ScrollView>